                    <div class="update">
                        <div class="profile-photo">
                            <img src="~/images/Course2.jpg" />
                        </div>
                        <div class="message">
                            <p><b>Emma Nwoye</b> Attended</p>
                            <small class="text-muted">2 Minutes Ago</small>
                        </div>
                    </div>
                </div>
            <!--====================END OF TO==============================-->
            <div class="sales-analytics">
                <h2>Attendance Report</h2>
                <div class="attendee online">
                    <div class="icon">
                        <i class="uil uil-user-location"></i>
                    </div>
                    <div class="right">
                        <div class="info">
                            <h3>ONLINE STUDENT</h3>
                            <small class="text-muted">Last 24 hours</small>
                        </div>
                        <h5 class="success">25%</h5>
                        <h3>3849</h3>
                    </div>
                </div>

                <div class="attendee online">
                    <div class="icon">
                        <i class="uil uil-user-location"></i>
                    </div>
                    <div class="right">
                        <div class="info">
                            <h3>ABSENT STUDENT</h3>
                            <small class="text-muted">Last 24 hours</small>
                        </div>
                        <h5 class="warning">25%</h5>
                        <h3>3849</h3>
                    </div>
                </div>

                <div class="attendee offline">
                    <div class="icon">
                        <i class="uil uil-user-location"></i>
                    </div>
                    <div class="right">
                        <div class="info">
                            <h3>OFFLINE STUDENT</h3>
                            <small class="text-muted">Last 24 hours</small>
                        </div>
                        <h5 class="danger">25%</h5>
                        <h3>3849</h3>
                    </div>
                </div>

                <div class="attendee add-event">
                    <div>
                        <i class="uil uil-plus-circle"></i>
                        <h3>Add Event</h3>
                    </div>
                </div>

            </div>

        </div>
    
    <div>
        @RenderBody()
    </div>
</body>
</html>
